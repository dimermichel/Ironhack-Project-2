<div class="d-flex justify-content-center">
  <div class="container">
    <h3>Edit Account</h3>
    <form action="/accounts/{{account._id}}/update" method="POST">
    <div class="form-row align-items-center">
      <div class="col-auto">
        <label class="control-label" for="accName">Account Name:</label>
        <input type="text" class="form-control mb-2" id="accName" name="accName" value="{{account.accName}}">
      </div>
      <div class="col-auto">
        <label class="control-label" for="accBalance">Account Balance:</label>
        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <div class="input-group-text">US $</div>
          </div>
          <input readonly type="text" class="form-control-plaintext" name="accBalance" id="inlineFormInputGroup" value="{{account.accBalance}}">
        </div>
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-warning">Save Changes</button>
      </div>
    </div>
  </form>
  </div>
</div>

<br><br>
<div class="container">
  <h3>Account Transactions</h3>
<br>
  <table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each transaction}}
      <tr>
        <td><a href="/transactions/{{this._id}}">{{this.merchant}}</a></td>
        <td>{{this.dateParsed}}</td>
        <td>{{this.amountParsed}}</td>
        <td>
          <form action="/transaction/{{this._id}}/delete" method="POST">
            <button class="btn btn-outline-danger" type="submit">
              <i class="far fa-trash-alt"></i> Delete
            </button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="/javascripts/dataTable.js"></script>