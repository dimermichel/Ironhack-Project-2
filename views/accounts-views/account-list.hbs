<h1>List of Accounts</h1>



  {{#if errorMessage}}
  <div class="error-message">{{ errorMessage }}</div>
  {{/if}}


   <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Account Name</th>
                
                <th>Account Balance</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
               {{#each accounts}}
            <tr>
                <td><a href="/accounts/{{this._id}}/update">{{this.accName}}</a></td>
               
                <td>{{this.accBalance}}</td>
                <td>  <form action="/accounts/{{this._id}}/delete" method="POST">
    <button type="submit">
      Delete
    </button>
  </form></td>
                
      
            </tr>
            {{/each}}
                    </tbody>
    </table>

<a href="/account-input">Add Account</a>



 <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="/javascripts/accountTable.js"></script>
