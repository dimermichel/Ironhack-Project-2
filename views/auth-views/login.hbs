{{!-- views/auth-views/login.hbs --}}

<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Log In</h5>
          <form class="form-signin" id="form" action="/login" method="POST">
            <div class="form-label-group">
              <input type="text" id="inputEmail" class="form-control" name="username" placeholder="Username" required>
              <label for="inputPassword"></label>
            </div>
            <div class="form-label-group">
              <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password"
                required>
              <label for="inputPassword"></label>
            </div>
            <hr class="my-4">
            {{#if errorMessage}}
            <div class="error-message">{{ errorMessage }}</div>
            {{/if}}
            <button class="btn btn-lg btn-warning btn-block text-uppercase" type="submit">Log In</button>
          </form>
          <br>
          <a id="reset" href="/reset">Forgot your password?</a>
        </div>
      </div>
    </div>
  </div>
</div>