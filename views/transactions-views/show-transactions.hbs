<h1>List of Transactions</h1>

<div class="center col-md-4 py-1">
  <div class="card">
    <div class="card-body">
      <div id="canvas-holder">
        <div class="chartjs-size-monitor">
          <div class="chartjs-size-monitor-expand">
            <div class=""></div>
          </div>
          <div class="chartjs-size-monitor-shrink">
            <div class=""></div>
          </div>
        </div>
        <canvas id="myChart" style="display: block; width: 150px; height: 150px;"></canvas>
      </div>
    </div>
  </div>
</div>

<ul>
  {{#each transaction}}
  <li><a href="/transactions/{{this._id}}">{{this.merchant}}</a> ................. Amount: ${{this.amount}}</li>
  <form action="/transaction/{{this._id}}/delete" method="POST">
    <button type="submit">
      Delete
    </button>
  </form>
  {{/each}}

</ul>


<a href="/add-transaction">Add transaction</a>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascripts/transactionsChart.js"></script>